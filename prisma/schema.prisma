generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String   @id @default(uuid())
  username       String
  email          String   @unique
  hashedPassword String
  verified       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updateAt       DateTime @updatedAt
}
